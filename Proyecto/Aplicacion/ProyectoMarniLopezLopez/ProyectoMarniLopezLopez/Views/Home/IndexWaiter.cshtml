@model IEnumerable<ProyectoMarniLopezLopez.Models.dtb_master>
@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="@if (item.dtb_svc_sts_id == 1) {<text>green</text>} else if (item.dtb_svc_sts_id == 2) {<text>blue</text>} else {<text>red</text>}">
                        <i class="material-icons">event_seat</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Mesa</p>
                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.dtb_id)</h3>
                        <div class="row">
                            <div class="col-md-12" style="text-align:center;">
                                @{
                                    if (item.dtb_svc_sts_id == 1)
                                    {
                                        <a class="btn btn-primary" href="@Url.Action("OpenDtb", "Salon",new { pmesa = item.dtb_id })">
                                            <span class="btn-label">
                                                <i class="material-icons">fiber_new</i>
                                            </span>
                                            Abrir Mesa
                                            <div class="ripple-container"></div>
                                        </a>
                                    }
                                    else if (item.dtb_svc_sts_id == 2)
                                    {
                                        <div class="col-md-6">
                                            <a class="btn btn-warning" href="">
                                                <span class="btn-label">
                                                    <i class="material-icons">add_shopping_cart</i>
                                                </span>
                                                Ordenar
                                                <div class="ripple-container"></div>
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a class="btn btn-danger" href="">
                                                <span class="btn-label">
                                                    <i class="material-icons">receipt</i>
                                                </span>
                                                Cuenta
                                                <div class="ripple-container"></div>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary btn-info" href="">
                                            <span class="btn-label">
                                                <i class="material-icons">pageview</i>
                                            </span>
                                            Consultar Mesa
                                            <div class="ripple-container"></div>
                                        </a>
                                    };
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons text-danger"></i>
                            <span>Estado actual: @Html.DisplayFor(modelItem => item.dtb_svc_sts.dtb_svc_sts_dsc)</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>