@model IEnumerable<ProyectoMarniLopezLopez.Models.dtb_master>
@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">



        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="orange">
                        <i class="material-icons">event_seat</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Mesa</p>
                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.dtb_id)</h3>
                        @Html.ActionLink("Edit", "Edit", new { id = item.dtb_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.dtb_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.dtb_id })
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons text-danger"></i>
                            <span>Estado actual: @Html.DisplayFor(modelItem => item.dtb_svc_sts.dtb_svc_sts_dsc)</span>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>