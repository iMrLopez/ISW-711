@model IEnumerable<ProyectoMarniLopezLopez.Models.prd_master>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="red">
                <i class="material-icons">list</i>
            </div>
            <div class="card-content">
                <div class="card-title">
                    <h4>Productos</h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive table-sales">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_shdsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_lgdsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.cat_master.cat_dsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.sts_master.sts_dsc)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_shdsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_lgdsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.cat_master.cat_dsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.sts_master.sts_dsc)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>