@model IEnumerable<ProyectoMarniLopezLopez.Models.prd_master>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="green">
                <i class="material-icons">list</i>
            </div>
            <div class="card-content">
                <div class="card-title">
                    <h4>Productos<a class="btn btn-primary btn-round pull-right" href="@Url.Action("Create")"><i class="material-icons">create</i> Crear Producto</a></h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive table-sales">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_shdsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_lgdsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prd_price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.cat_master.cat_dsc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.sts_master.sts_dsc)
                                        </th>
                                        <th style="text-align:center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_shdsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_lgdsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prd_price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.cat_master.cat_dsc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.sts_master.sts_dsc)
                                            </td>
                                            <td style="text-align:center">
                                                <a href="@Url.Action("Details","Product",new { id = item.prd_id })" type="button" rel="tooltip" class="btn btn-info" data-original-title="" title=""><i class="material-icons">person</i><div class="ripple-container"></div> </a>
                                                <a href="@Url.Action("Edit","Product",new { id = item.prd_id })" type="button" rel="tooltip" class="btn btn-success" data-original-title="" title=""><i class="material-icons">edit</i><div class="ripple-container"></div></a>
                                                <a href="@Url.Action("Delete","Product",new { id = item.prd_id })" type="button" rel="tooltip" class="btn btn-danger" data-original-title="" title=""><i class="material-icons">close</i><div class="ripple-container"></div></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>